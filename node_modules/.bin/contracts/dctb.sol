pragma solidity >=0.4.22 <0.9.0;

contract dctb {

struct product{
	// State variables
	uint uid;
	string file;
	string date;
	uint bid;
}

product[] dctb1;

// Function to add
// products details
function addFile(uint uid, string memory f,string memory d,uint bid) public{
	product memory e =product(uid, f, d,bid);
	dctb1.push(e);
}

// Function to get details of prodcut
function getFile(uint uid) public view returns(string memory,string memory,uint){
    uint i;
	for(i=0;i<dctb1.length;i++)
	{
		product memory e =dctb1[i];

		// Looks for a matching
		// employee id
		if(e.uid==uid)
		{
				return(e.file,e.date,e.bid);
		}
	}
	return("0","0",0);
}

}








